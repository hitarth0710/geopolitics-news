# Application
APP_NAME=GeoPolitics Watch
APP_DESCRIPTION=Your window to world geopolitics
DEBUG=false
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=sqlite:///./geopolitics_news.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/geopolitics

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_ORIGINS=["https://yourdomain.com"]
RATE_LIMIT_REQUESTS=100

# News API (optional - get free key at newsapi.org)
NEWS_API_KEY=

# Feed Settings
FEED_UPDATE_INTERVAL=30
FEED_TIMEOUT=30
MAX_ARTICLES_PER_FEED=50

# Caching
CACHE_ENABLED=true
CACHE_TTL=300

# Logging
LOG_LEVEL=INFO
LOG_JSON=true
LOG_FILE=
